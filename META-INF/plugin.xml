<idea-plugin version="2">
    <name>LazySpring</name>
    <description>spring-beans test config file creator</description>
    <version>1.0</version>
    <vendor>Kirill Korgov (kirill@korgov.ru)</vendor>

    <idea-version since-build="107.105"/>

    <application-components>
    </application-components>

    <project-components>
    </project-components>

    <actions>

        <group id="LazySpring" text="Lazy Spring" description="Helper for configuring you test" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
                <action id="LazySpring.GenTestSpringConfigAction" class="ru.korgov.intellij.lspr.GenTestSpringConfigAction"
                        text="Generate beans!"
                        description="Generates xml file with all beans needed for current test.">
                    <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt L"/>
                </action>
                <action id="LazySpring.ShowPropertiesAction" class="ru.korgov.intellij.lspr.ShowPropertiesAction"
                        text="Properties"
                        description="Properties of beans generation">
                </action>
            </group>

    </actions>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>
</idea-plugin>